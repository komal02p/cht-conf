# Root-level EditorConfig file
root = true

# Default settings for all files
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2

# JavaScript, TypeScript, and JSX/TSX files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML and TOML files
[*.{yml,yaml,toml}]
indent_style = space
indent_size = 2

# Markdown files (whitespace handling)
[*.md]
trim_trailing_whitespace = false

# Python files (PEP 8 standard)
[*.py]
indent_style = space
indent_size = 4

# HTML, CSS, and SCSS files
[*.{html,css,scss}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles (must use tabs)
[Makefile]
indent_style = tab

# CouchDB document property names
[*.{couch,couchdb}]
indent_style = space
indent_size = 2
