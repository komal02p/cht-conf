# Root-level EditorConfig file
root = true

# Global settings for all files
[*]
end_of_line = lf                  # Use Unix-style line endings
insert_final_newline = true        # Ensure a newline at the end of each file
trim_trailing_whitespace = true    # Remove trailing spaces automatically
charset = utf-8                    # Enforce UTF-8 encoding
indent_style = space               # Use spaces for indentation
indent_size = 2                    # Default indentation size

# JavaScript, TypeScript, and JSX/TSX files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single                # Prefer single quotes

# JSON files
[*.json]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 120              # Enforce readability

# YAML and TOML files (structured data)
[*.{yml,yaml,toml}]
indent_style = space
indent_size = 2
max_line_length = 120

# Markdown files (whitespace rules differ)
[*.md]
trim_trailing_whitespace = false   # Keep trailing spaces for line breaks
max_line_length = off              # No line length restriction

# Python files (PEP 8 style guide)
[*.py]
indent_style = space
indent_size = 4                    # PEP 8 standard indentation
max_line_length = 88               # PEP 8 recommended line length

# HTML, CSS, and SCSS files
[*.{html,css,scss}]
indent_style = space
indent_size = 2
max_line_length = 120

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles (MUST use tabs)
[Makefile]
indent_style = tab

# CouchDB document property names
[*.{couch,couchdb}]
indent_style = space
indent_size = 2
